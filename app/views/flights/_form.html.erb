<%= form_for(@flight) do |f| %>
  <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% @flight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :flight_number %><br>
    <%= f.text_field :flight_number %>
  </div>
  <div class="field">
    <%= f.label :origin %><br>
    <%= f.text_field :origin %>
  </div>
  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_field :destination %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>

<!-- SELECT FLIGHT_ID -->
  <label for="airplane_id">Plane:</label>
  <select name="airplane_id" id="airplane_id">

    <option></option>

    <% Airplane.all.each do |airplane| %>
      <option <%= "selected" if airplane.id == @flight.airplane_id %> value="<%= airplane.id %>"><%= airplane.name %></option>
    <% end %>

  </select>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
