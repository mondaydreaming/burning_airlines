<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Flight number</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Plane</th>
      <th>Seats Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.flight_number %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.date %></td>
        <td><%= flight.airplane.name %></td>
        <!-- UPDATE TO INC ROW*AISLE - TOTAL AVAIL -->
        <td><%= flight.airplane.rows*flight.airplane.aisles %></td>
        <td><a href="/#flights/<%= flight.id %>">Show Backbone</a></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

