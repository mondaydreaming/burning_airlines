<table class = 'table'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Flight number</th>
        <th>Origin</th>
        <th>Destination</th> 
        <th>Plane</th>
      </tr>
    </thead>

    <tbody>
    <% @flights.each do |flight| %>
    <tr>
      <td><%=flight.date%></td>
      <td><%=flight.flight_number%></td>
      <td><%=flight.origin%></td>
      <td><%=flight.destination%></td>
      <td><%=flight.airplane.name%></td>
    </tr>
    <% end %>
  </tbody>

  </table>